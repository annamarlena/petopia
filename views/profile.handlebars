  <link rel="stylesheet" href="./css/profilepic.css">
</head>
<body>

<div id="page-wrapper">

<header id="header" class="alt">
    <h1><a href="/">Petopia</a></h1>
    <nav id="nav">
        <ul>
            <li class="special">
                <a href="#menu" class="menuToggle"><span>Menu</span></a>
                <div id="menu">
                    <ul>
                      <li><a href="/">Home</a></li>
                      <li><a href="/hotels">Pet Hotel</a></li>
                      <li><a href="/spas">Pet Spa</a></li>
                      <li><a href="/login">Log In</a></li>
                    </ul>
                </div>
            </li>
        </ul>
    </nav>
</header>

<body>

  <section class="main">
  <div class="profile-card">
    <div class="insert-name">
        <h2>Welcome{{user.name}}</h2>
     </div>
     <div class="image-profile-html">
        <img class="dogo-img" src="./images/DL2.jpg" id="profile-pic" alt="">
    </div>
    <div class="data">
      <h3>Pet picture</h3>
        <input class="form-input" type="file" accept="image/jpeg, image/png, image/jpg" id="input-file">
    </div>
    <div class="data">
      <h3>Pet Name{{pet.name}}</h3>
      <input class="form-input" type="text" id="email-signup" />
    </div>
     <div class="data">
        <h3>Pet breed</h3>
        <input class="form-input" type="text" id="email-signup" />
      </div>
      <div class="data">
        <h3>Pet age</h3>
        <input class="form-input" type="text" id="email-signup" />
      </div>
    <div class="buttons">
      <a href="#" class="button fit primary">Save Profile</a>
    </div>
  </div>
</section>

<script>
    let profilePic = document.getElementById("profile-pic");
    let inputFile = document.getElementById("input-file");

    inputFile.onchange = function() {
        profilePic.src = URL.createObjectURL(inputFile.files[0])
    }
  </script>

  <script src="./js/profile.js"></script>
  <script src="./js/jquery.min.js"></script>
  <script src="./js/jquery.scrolly.min.js"></script>
  <script src="./js/browser.min.js"></script>
  <script src="./js/breakpoints.min.js"></script>
  <script src="./js/util.js"></script>
  <script src="./js/main.js"></script>

</body>