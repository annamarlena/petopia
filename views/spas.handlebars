 <body>

<!-- Page Wrapper -->
<div id="page-wrapper">

  <header id="header" class="alt">
		<h1><a href="/">Petopia</a></h1>
		<nav id="nav">
			<ul>
				<li class="special">
					<a href="#menu" class="menuToggle"><span>Menu</span></a>
					<div id="menu">
						<ul>
							<li><a href="/">Home</a></li>
							<li><a href="/hotels">Pet Hotel</a></li>
							<li><a href="/spas">Pet Spa</a></li>
                            <li><a href="/products">Products</a></li>
							<li><a href="/login">Log In</a></li>
						</ul>
					</div>
				</li>
			</ul>
		</nav>
	</header>

    <!-- Two -->
    <section id="two" class="wrapper alt style2">
        <section class="spotlight">
            <div class="image"><img src="./images/DL2.jpg" alt="" /></div><div class="content">
                <h2>Pet Spa</h2>
                <p>Welcome to our Pet Spa! Schedule an appointment for any of our pampering services. Whether it's a shampoo bath, haircut, brushing, or nail clipping... We have it all! <p>
            </div>
        </section>
    </section>

    <!-- Three -->
    <section id="three" class="wrapper style3 special">
        <div class="inner">
            <h2>Pet Spa Services</h2>
                <table>
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Price</th>
                            <th>Add to Cart</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each spas as |spa|}}
                        <tr>
                            <td>{{spa.serviceType}}</td>
                            <td>{{spa.description}}</td>
                            <td>{{spa.price}}</td>
                            <th><button class="button fit primary" id={{spa.id}}>Schedule Reservation</button></th>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
     </section>
    </div>

<!-- Scripts -->
    <script src="./js/jquery.min.js"></script>
    <script src="./js/jquery.scrolly.min.js"></script>
    <script src="./js/browser.min.js"></script>
    <script src="./js/breakpoints.min.js"></script>
    <script src="./js/util.js"></script>
    <script src="./js/main.js"></script>
</body>